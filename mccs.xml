<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="MCCS" _name="My Custom Color Scheme" version="1.0">

  <author>Jaziel Loureiro</author>
  <_description>My custom Gedit color scheme</_description>

  <!-- Palette -->
  <color name="white"      value="#d0d0d0"/>
  <color name="light-gray" value="#888a85"/>
  <color name="dark-gray"  value="#555753"/>
  <color name="black"      value="#0f0f0f"/>
  <color name="green"      value="#00aa00"/>
  <color name="light-red"  value="#ff5555"/>
  <color name="dark-red"   value="#ff2e2e"/>
  <color name="purple"     value="#be5eff"/>
  <color name="pink"       value="#ff3b86"/>
  <color name="yellow"     value="#ffe612"/>
  <color name="cyan"       value="#00aaaa"/>
  <color name="blue"       value="#416dab"/>

  <!-- Global Settings -->
  <style name="text"         foreground="white"     background="black"/>
  <style name="selection"    foreground="dark-gray" background="light-gray"/>
  <style name="cursor"       foreground="white"/>
  <style name="current-line" background="dark-gray"/>
  <style name="line-numbers" foreground="dark-gray" background="black"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"    foreground="dark-red"/>
  <style name="bracket-mismatch" foreground="white" background="light-red"/>

  <!-- Right Margin -->
  <style name="right-margin" foreground="light-gray" background="dark-gray"/>

  <!-- Search Matching -->
  <style name="search-match" foreground="white" background="green"/>

  <!-- Comments -->
  <style name="def:comment" foreground="light-gray"/>
  <style name="def:shebang" foreground="blue"/>

  <!-- Constants -->
  <style name="def:constant"         foreground="blue"/>
  <style name="def:character"        foreground="yellow"/>
  <style name="def:string"           foreground="yellow"/>
  <style name="def:special-char"     foreground="purple"/>
  <style name="def:number"           foreground="light-red"/>
  <style name="def:special-constant" foreground="blue"/>
  <style name="def:boolean"          foreground="pink"/>

  <!-- Identifiers -->
  <style name="def:identifier" foreground="purple"/>

  <!-- Statements -->
  <style name="def:statement" foreground="cyan"/>

  <!-- Types -->
  <style name="def:type" foreground="green"/>

  <!-- Others -->
  <style name="def:preprocessor" foreground="blue"/>
  <style name="def:error"        background="dark-gray" bold="true"/>
  <style name="def:warning"      background="light-red"/>
  <style name="def:note"         foreground="yellow"    bold="true"/>

  <!-- Markup -->
  <style name="def:emphasis"             italic="true"/>
  <style name="def:strong-emphasis"      bold="true"/>
  <style name="def:inline-code"          foreground="cyan"/>
  <style name="def:insertion"            underline="single"/>
  <style name="def:deletion"             strikethrough="true"/>
  <style name="def:link-text"            foreground="light-gray"/>
  <style name="def:link-symbol"          foreground="light-gray" bold="true"/>
  <style name="def:link-destination"     foreground="yellow"     italic="true"/>
  <style name="def:heading"              foreground="green"/>
  <style name="def:thematic-break"       foreground="green"      bold="true"/>
  <style name="def:preformatted-section" foreground="cyan"/>
  <style name="def:list-marker"          foreground="light-red"/>
  
  <!-- Language specific -->
  <style name="xml:element-name"   foreground="cyan"/>
  <style name="xml:attribute-name" foreground="light-red"/>

</style-scheme>
